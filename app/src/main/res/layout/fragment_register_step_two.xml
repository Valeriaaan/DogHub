<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.register.RegisterStepTwoFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/HealthConcernTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Heath Concerns"
                android:textColor="@color/primary_main_color"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Enter any Health Concern that your dog may be experiencing. Leave it blank if here are none."
                android:textColor="#666666"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/HealthConcernTextView" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/contactTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="Health concern"
                android:textSize="16sp"
                android:textColor="@color/primary_main_color"
                android:fontFamily="@font/roboto_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ContactNumber"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextHealthConcern"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter Health concern"
                    android:lines="1"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:scrollbars="horizontal"
                    android:singleLine="true"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingRight="28dp"
            android:paddingBottom="13dp"
            android:text="Previous"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_previous_button"
            android:backgroundTint="@color/primary_main_color"
            android:textColor="@android:color/white"
            android:layout_marginEnd="30dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingTop="13dp"
            android:paddingRight="35dp"
            android:paddingBottom="13dp"
            android:text="Next"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_next_button"
            android:backgroundTint="@color/primary_main_color"
            android:textColor="@android:color/white"
            android:layout_marginStart="30dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
